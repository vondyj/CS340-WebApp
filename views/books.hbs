<h2>books</h2>


<div class="flex-container">

<div>
<table>
    <thead>
        <h3>Books sorted by title.</h3>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>

        {{#each data}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.author}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.price}}</td>
             <td><button onclick="deleteBook({{this.id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

<div class="col">
<h3>Add a new book.</h3>

<form id="add-book-form" method="POST" action="/add-book-form">

<p>To add a new book, please enter the its information below then click submit.</p>

    <label for="input-title" class="left">Title: </label>
    <input type="text" name="input-title" id="input-title" required>
    <br>

    <label for="select-author">Author: </label>
    <select name="select-author" id="select-author">
    </select>
    <br>

    <label for="input-quantity">Quantity: </label>
    <input type="number" name="input-quantity" id="input-quantity" min="1" required>
    <br>

    <label for="input-price">Price: </label>
    <input type="number" name="input-price" id="input-price" min="1" step="any" required>
    <br>
    
    <button class="submit">Submit</button>

</form>
</div>

</div>