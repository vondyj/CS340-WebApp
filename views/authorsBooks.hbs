<h2>authorsBooks</h2>

<table>

    <thead>
        <p>An intersection table, linking authors to their specific books.</p>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>

        {{#each data}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.book}}</td>
            <td>{{this.author}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>