<h2>purchaseBookDetails</h2>

<div class="flex-container">

  <div>
    <table>

      <thead>
        <h3>An intersection table, ordered by id.</h3>
        <tr>
          <th>detail id</th>
          <th>purchase id</th>
          <th>book id</th>
          <th>title</th>
          <th>quantity</th>
        </tr>
      </thead>

      <tbody>

        {{#each data}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.purchase}}</td>
            <td>{{this.book_id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.quantity}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div>
    <h3>Add details for a purchase.</h3>

    <form id="add-details-form" method="POST" action="/add-details-form">
      <p>To add details to a purchase, please supply the requested information
        then click submit.</p>

      <label for="select-purchase">Purchase: </label>
      <select name="select-purchase" id="select-purchase">
       <option value=""></option>
        {{#each dropDown1}}
        <option value="{{this.id}}">{{moment this.date format="l"}} - {{this.customer}}</option>
        {{/each}}
      </select>
      <br />

      <label for="input-quantity">Quantity: </label>
      <input type="number" name="input-quantity" id="input-quantity" min="1" required />
      <br />

      <label for="select-book">Book: </label>
      <select name="select-book" id="select-book">
       <option value=""></option>
        {{#each dropDown2}}
        <option value="{{this.id}}">{{this.title}}</option>
        {{/each}}
      </select>
      <br />

      <button class="submit">Submit</button>

    </form>
  </div>

</div>