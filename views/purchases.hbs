<h2>purchases</h2>

<div class="flex-container">

<div>
<table>

    <thead>
        <h3>Purchases sorted by date.</h3>
        <tr>
            <th>id</th>
            <th>purchase date</th>
            <th>customer</th>
            <th>staff</th>
            <th>book title</th>
            <th>number purchased</th>
            <th>line total</th>
        </tr>
    </thead>

    <tbody>

        {{#each data}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{moment this.date format="LL"}}</td>
            <td>{{this.customer}}</td>
            <td>{{this.staff}}</td>
            <td>{{this.title}}</td>
            <td>{{this.copies}}</td>
            <td>{{this.total}}</td>
        </tr>
        {{/each}}
        
    </tbody>
</table>
</div>

</div>